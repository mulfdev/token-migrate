{
  "exclude": ["node_modules"],
  "include": ["deploy", "tasks", "test", "hardhat.config.ts", "scripts"],
  "compilerOptions": {
    "target": "es2020",
    "allowJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
